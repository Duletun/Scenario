<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="meta.Views.NotePage" Title="Заметка"
             NavigationPage.HasNavigationBar = "false">
    <StackLayout>
        <StackLayout>
            <Label Text="Заголовок заметки" FontSize="Medium" TextColor="#000000"/>
            <Entry Text="{Binding Title}" FontSize="Medium" />
            <Label Text="Содержание" FontSize="Medium" TextColor="#000000" Padding="0,50,0,0"/>
            <Editor Text="{Binding Text}" FontSize="Medium"  HeightRequest="400" BackgroundColor="#DBEFFD" />
        </StackLayout>
    </StackLayout>
</ContentPage>